#include <iostream>
#include <string>
#include <map>
#define day_1 "Понедельник"
#define day_2 "Вторник"
#define day_3 "Среда"
#define day_4 "Четверг"
#define day_5 "Пятница"
#define day_6 "Суббота"
#define day_7 "Воскресенье"

#define contact(a) day_ ## a

#define get_day(n) contact(n)

#define toDay(s) \
    if(s == 1)cout << get_day(1) << endl; \ 
    else if(s == 2) cout << get_day(2) << endl; \ 
    else if(s == 3) cout << get_day(3) << endl; \ 
    else if(s == 4) cout << get_day(4) << endl; \ 
    else if(s == 5) cout << get_day(5) << endl; \ 
    else if(s == 6) cout << get_day(6) << endl; \ 
    else if(s == 7) cout << get_day(7) << endl; \
    else cout << "Ошибка." << endl;

using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    int num;

    cout << "Введите день недели в виде порядкого номера(1-7):  "; cin >> num;

    if (num < 1 || num > 7) {
        cout << "Ошибка: введите число от 1 до 7" << endl;
        return 1;
    }

    toDay(num);
}
